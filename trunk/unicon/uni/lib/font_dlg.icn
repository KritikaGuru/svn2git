      edit_fontcolor := EditList()
      edit_fontcolor$set_pos(390, 59)
      edit_fontcolor$set_size("100", )
      edit_fontcolor$set_selection_list(["black", "red", "green", "blue", "cyan", "magenta", "yellow", "white", ""])
      self$add(edit_fontcolor)
      label_5 := Label()
