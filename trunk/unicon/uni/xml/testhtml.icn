import xml

procedure main(a)
   p := HtmlParser()

   fmt := HtmlFormatter()

   every e := !a do {
      f := open(e) | stop("couldnt open" || e)
      s := ""
      every s ||:= !f
      close(f)
      d := p.parse(s) | stop("couldnt parse " || e)
      write(fmt.format(d))
      d.print_structure()
      write("------------")
   }
end

