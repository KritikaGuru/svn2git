      case test of {
         "all" : {

            write("\n---------------------------------------")

            write("concord concord.dat")
            tL := gettimes(run_concord, "concord.dat")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            write("---------------------------------------")

            write("deal 50000")
            tL := gettimes(run_deal, 50000)
