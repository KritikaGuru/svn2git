            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            if \concurrent then {
	       writes(left("regex-dna 10-thou.dat", 30))
               tL := gettimes(run_regexdna, "10-thou.dat")
               rL := calctimes(tL[1], tL[2], tL[3], tL[4])
               writetime(rL[1], rL[2], rL[3])
               }

            writes(left("reverse-complement 150-thou.dat", 30))
            tL := gettimes(run_reversecomplement, "150-thou.dat")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("spectral-norm 100", 30))
            tL := gettimes(run_spectralnorm, 100)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

