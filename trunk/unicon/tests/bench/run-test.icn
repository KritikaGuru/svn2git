         "regex-dna" : {
            write_header()
            writes(left("regex-dna 10-thou.dat",30))
            if \concurrent then {
               tL := gettimes(run_regexdna, "10-thou.dat")
               rL := calctimes(tL[1], tL[2], tL[3], tL[4])
