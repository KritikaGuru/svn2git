link "auxiliary" 

$ifdef _UNIX
$define NUL "/dev/null"
$else
   $define NUL "\\nul"
$endif

global output

procedure main(argv)
   local rL, tL, concurrent, tests := []

   concurrent := verify_concurrent()
   
   output := open(NUL, "w") | stop("Cannot open " || NUL || " for writing")

   if *argv < 1 then {
      if /concurrent then
         write_error(3)
      put(tests, "all")
      }
   else every put(tests, !argv) 
   while test := get(tests) do {
      case test of {
         "all" : {

            write_header()

            writes(left("concord concord.test",30))
            tL := gettimes(run_concord, "concord.test")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("deal 500", 30))
            tL := gettimes(run_deal, 500)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("ipxref ipxref.test", 30))
            tL := gettimes(run_ipxref, "ipxref.test")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("queens 9", 30))
            tL := gettimes(run_queens, 9)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("rsg rsg.test", 30))
            tL := gettimes(run_rsg, "rsg.test")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])
            
            if \concurrent then {
	       writes(left("binary-trees 10", 30))
               tL := gettimes(run_binarytrees, 10)
               rL := calctimes(tL[1], tL[2], tL[3], tL[4])
               writetime(rL[1], rL[2], rL[3])
               }
            
            if \concurrent then {
	       writes(left("chameneos-redux 600", 30))
               tL := gettimes(run_chameneos, 600)
               rL := calctimes(tL[1], tL[2], tL[3], tL[4])
               writetime(rL[1], rL[2], rL[3])
               }

            writes(left("fannkuch 7", 30))
            tL := gettimes(run_fannkuch, 7)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("fasta 1000", 30))
            tL := gettimes(run_fasta, 1000)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            writes(left("k-nucleotide 25-thou.dat", 30))
            tL := gettimes(run_knucleotide, "25-thou.dat")
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

            if \concurrent then {
	       writes(left("mandelbrot 200", 30))
               tL := gettimes(run_mandelbrot, 200)
               rL := calctimes(tL[1], tL[2], tL[3], tL[4])
               writetime(rL[1], rL[2], rL[3])
               }

            writes(left("meteor-contest 1", 30))
            tL := gettimes(run_meteorcontest, 1)
            rL := calctimes(tL[1], tL[2], tL[3], tL[4])
            writetime(rL[1], rL[2], rL[3])

