#pg 48

procedure main()
   p := (Break("a") => a .| Break("b") => b .| Break("c") => c) || Fail() 
   l := [ "alpha", "beta", "abracadabra", "absolutely", "awful", "albeit" ]
   write("Acceptable words are")
   every s := !l do {
      a := b := c := &null
      s ?? p
      if ( \a & \b & /c) then write(s)
      }
end
