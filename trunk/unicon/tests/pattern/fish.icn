#
# fish.icn - test generator resumption of patterns.
#
# Print first word of fourth word-pair. Expected output:
# blue
procedure main()
   s := "One fish two fish red fish blue fish"
   wrdpat := Break(&letters) || Span(&letters) -> word
   p := wrdpat || Span(" ") || "fish"
   every (s ?? p)\4
   write(word)
end       
