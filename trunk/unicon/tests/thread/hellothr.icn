# Very simple threads example. Create two hello world threads and finish. 
#
procedure main()                                                                                    
   write("Create two threads..")
   a := create print(1)                                                                           
   b := create print(2)                                                                           
   
   write("Fire the two threads and wait for them to finish...")   
   thread(a)                                                                                     
   thread(b)                                                                                     
   
   # wait fot the two threads
   wait(a)                                                                                          
   wait(b)                   
   
   write("The process ended successfully, exiting now..")
end                                                                                                 
                                                                                                    
procedure print(id)                                                                                 
   write("Hello world! I'm thread ", id, " I will finish now." )                                                                        
end                                                                                                 
