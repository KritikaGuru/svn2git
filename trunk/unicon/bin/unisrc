zip -r uni.zip uni/xml/*.icn
zip -r uni.zip uni/iyacc/*.c uni/iyacc/*.h uni/iyacc/Makefile
zip -r uni.zip uni/iyacc/test/Makefile uni/iyacc/test/calc.* uni/iyacc/test/make.bat uni/iyacc/test/makefile.win
zip -r uni.zip uni/ulex/*.[chly] uni/iyacc/makefile
zip -r uni.zip uni/ulex/test/makefile uni/ulex/test/*.l uni/ulex/test/*.icn uni/ulex/test/*.txt
zip -r uni.zip uni/unicon/*.icn uni/unicon/makefile uni/unicon/*.y uni/unicon/unigram.u uni/unicon/idol.u
zip -r uni.zip config/Makefile
zip -r uni.zip config/port/[dhiMprs]*
zip -r uni.zip config/unix/[abd-z]*/[abd-z]* config/unix/[abd-z]*/common.hdr
zip -r uni.zip config/unix/{Common,Config,Makefile} config/unix/[abd-z]*/Makedefs
zip -r uni.zip config/win32/cygwin/[abd-z]* config/win32/cygwin/config.sh
zip -r uni.zip config/win32/gcc/[abd-z]* config/win32/gcc/config.sh
zip -r uni.zip config/win32/msvc/[abd-z]* config/win32/msvc/config.bat
zip -r uni.zip ipl/README ipl/Translate-icont ipl/Makefile
zip -r uni.zip ipl/cfuncs/*.{c,h,sh} ipl/cfuncs/{Makefile,README}
zip -r uni.zip ipl/data/[Ra-z]* ipl/docs/[Ra-z]*
zip -r uni.zip ipl/gdata/[Ra-z]* ipl/gdocs/[Ra-z]*
zip -r uni.zip ipl/gpacks/README ipl/gpacks/*/README ipl/gpacks/*/Makefile ipl/gpacks/*/*.icn
zip -r uni.zip ipl/mdata/README ipl/mdocs/README ipl/mdocs/m*
zip -r uni.zip ipl/mpacks/README ipl/packs/README ipl/lib/makefile
