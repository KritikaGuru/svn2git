#!/bin/sh
cd $HOME/unicon/v
rm uni.zip
zip -r uni.zip Makefile README
zip -r uni.zip bin/unisrc bin/unisrc-tar bin/unisrc.bat
zip -r uni.zip src/Makefile src/h/*.h
zip -r uni.zip src/icont/*.c src/icont/*.h src/icont/*.icn src/icont/Makefile
zip -r uni.zip src/common/*.c src/common/*.h src/common/*.icn src/common/Makefile
zip -r uni.zip src/iconc/*.c src/iconc/*.h src/iconc/Makefile
zip -r uni.zip src/libtp/*.c src/libtp/*.h src/libtp/Makefile* src/libtp/config* src/libtp/shtool src/libtp/uri/*.c src/libtp/uri/*.h src/libtp/uri/Makefile* src/libtp/uri/makefile.win src/libtp/tests/Makefile* src/libtp/tests/*.c src/libtp/makefile.win
zip -r uni.zip src/preproc/*.c src/preproc/*.h src/preproc/Makefile
zip -r uni.zip src/rtt/*.c src/rtt/*.h src/rtt/Makefile
zip -r uni.zip src/runtime/*.r src/runtime/*.ri src/runtime/*.icn src/runtime/Makefile
zip -r uni.zip src/xpm/[A-Z]* src/xpm/doc src/xpm/lib/*.[ch] src/xpm/lib/*akefile* src/xpm/X11/xpm.h
zip -r uni.zip src/gdbm/*.c src/gdbm/*.h src/gdbm/gdbm.mak src/gdbm/configure src/gdbm/configure.in src/gdbm/autoconf.h.in src/gdbm/gdbm.lib src/gdbm/Makefile.in src/gdbm/gdbm.proto src/gdbm/gdbm.proto2
zip -r uni.zip src/wincap/*.c src/wincap/*.h src/wincap/Makefile
zip -r uni.zip uni/ivib/*.icn uni/ivib/makefile uni/ivib/icon/[xi]*
zip -r uni.zip uni/Makefile uni/docs
zip -r uni.zip uni/ide
zip -r uni.zip uni/lib/*.icn uni/lib/makefile
zip -r uni.zip uni/iyacc/*.c uni/iyacc/*.h uni/iyacc/Makefile
zip -r uni.zip uni/iyacc/test/Makefile uni/iyacc/test/calc.* uni/iyacc/test/make.bat uni/iyacc/test/makefile.win
zip -r uni.zip uni/unicon/*.icn uni/unicon/makefile uni/unicon/*.y uni/unicon/unigram.u uni/unicon/idol.u
zip -r uni.zip config
zip -r uni.zip ipl/README ipl/Translate-icont
zip -r uni.zip ipl/cfuncs/*.{c,h,sh} ipl/cfuncs/{Makefile,README}
zip -r uni.zip ipl/data/[Ra-z]* ipl/docs/[Ra-z]*
zip -r uni.zip ipl/gdata/[Ra-z]* ipl/gdocs/[Ra-z]*
zip -r uni.zip ipl/gpacks/README ipl/gpacks/*/README ipl/gpacks/*/Makefile ipl/gpacks/*/*.icn
zip -r uni.zip ipl/mdata/README ipl/mdocs/README ipl/mdocs/m*
zip -r uni.zip ipl/mpacks/README ipl/packs/README ipl/lib/makefile
zip -r uni.zip ipl/packs/*/{README,readme,NOTICE} ipl/packs/*/Makefile ipl/packs/*/*.???
zip -r uni/zip ipl/packs/loadfunc/*.{c,h,sh}
zip -r uni.zip ipl/gincl/*.icn ipl/gprocs/*.icn ipl/gprogs/*.icn
zip -r uni.zip ipl/incl/*.icn ipl/procs/*.icn ipl/progs/*.icn
zip -r uni.zip ipl/mincl/*.icn ipl/mprocs/*.icn ipl/mprogs/*.icn
zip -r uni.zip tests\M* tests\R*
zip -r uni.zip tests\bench\Comp* tests\bench\M* tests\bench\R* tests\bench\T* tests\bench\*.???
zip -r uni.zip tests\calling\M* tests\calling\R* tests\calling\extcall\M* tests\calling\extcall\e*.* tests\calling\loadfunc\M* tests\calling\loadfunc\R* tests\calling\loadfunc\b*.* tests\calling\loadfunc\mklib.sh
zip -r uni.zip tests\general\Makefile tests\general\README tests\general\T* tests\general\*.???
zip -r uni.zip tests\graphics\Makefile tests\graphics\README tests\graphics\gpxtest.*
zip -r uni.zip tests\ipl\Makefile tests\ipl\Test tests\ipl\*.icn tests\ipl\stand\*.out
zip -r uni.zip tests\posix\Makefile tests\posix\T* tests\posix\*.icn tests\posix\*.lst tests\posix\stand\*.out tests\posix\test-dir\?
zip -r uni.zip tests\preproc\Makefile tests\preproc\README tests\preproc\T* tests\preproc\*.? tests\preproc\stand\*.out tests\preproc\dir2\*.h tests\preproc\dir1\*.h tests\preproc\dir1\dir11\*.h
zip -r uni.zip tests\samples\Makefile tests\samples\T* tests\samples\*.??? tests\samples\stand\*.out
zip -r uni.zip tests\special\Makefile tests\special\README tests\special\*.???
zip -r uni.zip tests\unicon\*.icn
chmod go+r uni.zip
