zip -r uni.zip src/icont/*.c src/icont/*.h src/icont/*.icn src/icont/Makefile
zip -r uni.zip src/common/*.c src/common/*.h src/common/*.icn src/common/Makefile
zip -r uni.zip src/iconc/*.c src/iconc/*.h src/iconc/Makefile
zip -r uni.zip src/libtp/*.c src/libtp/*.h src/libtp/Makefile* src/libtp/config* src/libtp/shtool/shtool src/libtp/uri/*.c src/libtp/uri/*.h src/libtp/uri/Makefile* src/libtp/uri/makefile.win src/libtp/tests/Makefile* src/libtp/tests/*.c src/libtp/makefile.win
