#!/bin/sh
#
# per request from Robert Heckendorn, this script
# unpacks a unicon/ subdirectory, rather than leaving it up to the
# user to do this. In order to achieve this goal, it does it all from one
# directory higher than unicon/
#
cd $HOME/unicon/..
rm uni.zip
zip -r uni.zip unicon/Makefile unicon/README unicon/configure
zip -r uni.zip unicon/configure.ac unicon/aclocal.m4 unicon/build.sh
zip -r uni.zip unicon/bin/unisrc unicon/bin/unisrc-tar unicon/bin/unisrc.bat
zip -r uni.zip unicon/src/Makefile unicon/src/h/*.h unicon/src/h/auto.in
zip -r uni.zip unicon/src/icont/*.{c,h,icn} unicon/src/icont/Makefile
zip -r uni.zip unicon/src/common/*.{c,cc,h,icn} unicon/src/common/Makefile
zip -r uni.zip unicon/src/iconc/*.[ch] unicon/src/iconc/Makefile
zip -r uni.zip unicon/src/libtp/*.[ch] unicon/src/libtp/*akefile*
zip -r uni.zip unicon/src/libtp/config* unicon/src/libtp/shtool/shtool
zip -r uni.zip unicon/src/libtp/uri/*.[ch] unicon/src/libtp/uri/Makefile*
zip -r uni.zip unicon/src/libtp/uri/*akefile* unicon/src/libtp/tests/*akefile*
zip -r uni.zip unicon/src/libtp/tests/*.c unicon/src/libtp/makefile.win
zip -r uni.zip unicon/src/preproc/*.[ch] unicon/src/preproc/Makefile
zip -r uni.zip unicon/src/rtt/*.[ch] unicon/src/rtt/Makefile
zip -r uni.zip unicon/src/runtime/*.{r,ri,icn} unicon/src/runtime/Makefile
zip -r uni.zip unicon/src/xpm/[ABD-Z]* unicon/src/xpm/xpm.h
zip -r uni.zip unicon/src/xpm/CHANGES unicon/src/xpm/COPYRIGHT
zip -r uni.zip unicon/src/xpm/doc/xpm.PS.gz unicon/src/xpm/lib/*.[ch]
zip -r uni.zip unicon/src/xpm/lib/*akefile* unicon/src/xpm/X11/xpm.h
zip -r uni.zip unicon/src/lib/voice/jvoip.h unicon/src/lib/audio/audio.h
zip -r uni.zip unicon/src/gdbm/*.{c,h,wgc} unicon/src/gdbm/*akefile*
zip -r uni.zip unicon/src/gdbm/configure* unicon/src/gdbm/autoconf.*
zip -r uni.zip unicon/src/gdbm/gdbm.{lib,mak,proto,proto2}
zip -r uni.zip unicon/src/lib/audio/Makefile* unicon/src/lib/audio/readme
zip -r uni.zip unicon/src/lib/audio/*.{c,h,cpp}
zip -r uni.zip unicon/uni/ivib/*.icn unicon/uni/ivib/makefile
zip -r uni.zip unicon/uni/ivib/icon/[xi]*
zip -r uni.zip unicon/uni/makedefs unicon/uni/docs
zip -r uni.zip unicon/uni/ide/*.icn unicon/uni/ide/makefile
zip -r uni.zip unicon/uni/lib/*.icn unicon/uni/lib/makefile
zip -r uni.zip unicon/uni/lib/deps.out
zip -r uni.zip unicon/uni/gui/*.icn unicon/uni/gui/deps.out
zip -r uni.zip unicon/uni/gui/ivib/*.icn unicon/uni/gui/ivib/deps.out
zip -r uni.zip unicon/uni/gui/ivib/icon/*.{icon,xpm}
zip -r uni.zip unicon/uni/gui/ivib/icon/xpmtoims.icn
zip -r uni.zip unicon/uni/gui/guidemos/*.icn
zip -r uni.zip unicon/uni/native/*.[ch] unicon/uni/native/makefile
zip -r uni.zip unicon/uni/parser/*.{icn,y} unicon/uni/parser/deps.out
zip -r uni.zip unicon/uni/progs/*.icn unicon/uni/progs/makefile
zip -r uni.zip unicon/uni/udb/*.icn unicon/uni/udb/Makefile
zip -r uni.zip unicon/uni/udb/lib/*.icn unicon/uni/udb/lib/Makefile
zip -r uni.zip unicon/uni/udb/dta/*.icn unicon/uni/udb/dta/Makefile
zip -r uni.zip unicon/uni/unidep/*.icn unicon/uni/unidep/deps.out
zip -r uni.zip unicon/uni/unidoc/*.icn unicon/uni/unidoc/deps.out
zip -r uni.zip unicon/uni/unidoc/docs/[dlm]*
zip -r uni.zip unicon/uni/util/*.icn
zip -r uni.zip unicon/uni/xml/*.icn unicon/uni/xml/deps.out
zip -r uni.zip unicon/uni/iyacc/*.[ch] unicon/uni/iyacc/Makefile
zip -r uni.zip unicon/uni/iyacc/test/Makefile unicon/uni/iyacc/test/calc.*
zip -r uni.zip unicon/uni/iyacc/test/make*.*
zip -r uni.zip unicon/uni/ulex/*.[chly] unicon/uni/iyacc/makefile
zip -r uni.zip unicon/uni/ulex/test/makefile
zip -r uni.zip unicon/uni/ulex/test/*.{l,icn,txt}
zip -r uni.zip unicon/uni/unicon/*.{icn,y} unicon/uni/unicon/makefile
zip -r uni.zip unicon/uni/unicon/unigram.u unicon/uni/unicon/idol.u
zip -r uni.zip unicon/uni/unicon/meta.err
zip -r uni.zip unicon/uni/3d/*.icn unicon/uni/3d/makefile
zip -r uni.zip unicon/uni/3d/viewer/*.icn unicon/uni/3d/viewer/makefile
zip -r uni.zip unicon/config/Makefile unicon/config/pthreads.c
zip -r uni.zip unicon/config/port/[dhiMprs]*
zip -r uni.zip unicon/config/unix/[abd-z]*/[abd-z]*
zip -r uni.zip unicon/config/unix/[abd-z]*/common.hdr
zip -r uni.zip unicon/config/unix/Common unicon/config/unix/Config
zip -r uni.zip unicon/config/unix/Makefile
zip -r uni.zip unicon/config/unix/[abd-z]*/Makedefs
zip -r uni.zip unicon/config/win32/cygwin/[abd-z]*
zip -r uni.zip unicon/config/win32/cygwin/config.sh
zip -r uni.zip unicon/config/win32/gcc/[abd-z]*
zip -r uni.zip unicon/config/win32/gcc/config.sh
zip -r uni.zip unicon/config/win32/msvc/[abd-z]*
zip -r uni.zip unicon/config/win32/msvc/config.bat
zip -r uni.zip unicon/ipl/README unicon/ipl/Translate-icont unicon/ipl/Makefile
zip -r uni.zip unicon/ipl/cfuncs/*.{c,h,sh}
zip -r uni.zip unicon/ipl/cfuncs/Makefile unicon/ipl/cfuncs/README
zip -r uni.zip unicon/ipl/data/[Ra-z]* unicon/ipl/docs/[Ra-z]*
zip -r uni.zip unicon/ipl/gdata/[Ra-z]* unicon/ipl/gdocs/[Ra-z]*
zip -r uni.zip unicon/ipl/gpacks/README unicon/ipl/gpacks/*/README
zip -r uni.zip unicon/ipl/gpacks/*/Makefile unicon/ipl/gpacks/*/*.icn
zip -r uni.zip unicon/ipl/mdata/README unicon/ipl/mdocs/README
zip -r uni.zip unicon/ipl/mdocs/m*
zip -r uni.zip unicon/ipl/mpacks/README unicon/ipl/packs/README
zip -r uni.zip unicon/ipl/lib/makefile
zip -r uni.zip unicon/ipl/packs/*/NOTICE
zip -r uni.zip unicon/ipl/packs/{ibpag2,idol,itweak,loadfunc,tcll1}/README
zip -r uni.zip unicon/ipl/packs/euler/readme unicon/ipl/packs/skeem/READ_ME
zip -r uni.zip unicon/ipl/packs/*/Makefile unicon/ipl/packs/[a-z]*/*.???
zip -r uni/zip unicon/ipl/packs/loadfunc/*.{c,h,sh}
zip -r uni.zip unicon/ipl/gincl/*.icn unicon/ipl/gprocs/*.icn
zip -r uni.zip unicon/ipl/gprogs/*.icn
zip -r uni.zip unicon/ipl/incl/*.icn unicon/ipl/procs/*.icn
zip -r uni.zip unicon/ipl/progs/*.icn
zip -r uni.zip unicon/ipl/mincl/*.icn unicon/ipl/mprocs/*.icn
zip -r uni.zip unicon/ipl/mprogs/*.icn
zip -r uni.zip unicon/tests/M* unicon/tests/R*
zip -r uni.zip unicon/tests/bench/Comp* unicon/tests/bench/M*
zip -r uni.zip unicon/tests/bench/[RT]* unicon/tests/bench/*.???
zip -r uni.zip unicon/tests/calling/[MR]*
zip -r uni.zip unicon/tests/calling/extcall/M*
zip -r uni.zip unicon/tests/calling/extcall/e*.*
zip -r uni.zip unicon/tests/calling/loadfunc/[MR]*
zip -r uni.zip unicon/tests/calling/loadfunc/b*.*
zip -r uni.zip unicon/tests/calling/loadfunc/mklib.sh
zip -r uni.zip unicon/tests/general/Makefile unicon/tests/general/README
zip -r uni.zip unicon/tests/general/T* unicon/tests/general/*.???
zip -r uni.zip unicon/tests/graphics/Makefile unicon/tests/graphics/README
zip -r uni.zip unicon/tests/graphics/gpxtest.*
zip -r uni.zip unicon/tests/ipl/Makefile unicon/tests/ipl/Test
zip -r uni.zip unicon/tests/ipl/*.icn unicon/tests/ipl/stand/*.out
zip -r uni.zip unicon/tests/posix/Makefile unicon/tests/posix/T*
zip -r uni.zip unicon/tests/posix/*.{icn,lst} unicon/tests/posix/stand/*.out
zip -r uni.zip unicon/tests/posix/test-dir/?
zip -r uni.zip unicon/tests/preproc/Makefile unicon/tests/preproc/README
zip -r uni.zip unicon/tests/preproc/T* unicon/tests/preproc/*.?
zip -r uni.zip unicon/tests/preproc/stand/*.out unicon/tests/preproc/dir2/*.h
zip -r uni.zip unicon/tests/preproc/dir1/*.h
zip -r uni.zip unicon/tests/preproc/dir1/dir11/*.h
zip -r uni.zip unicon/tests/samples/Makefile unicon/tests/samples/T*
zip -r uni.zip unicon/tests/samples/*.??? unicon/tests/samples/stand/*.out
zip -r uni.zip unicon/tests/special/Makefile unicon/tests/special/README
zip -r uni.zip unicon/tests/special/*.???
zip -r uni.zip unicon/tests/unicon/*.icn
chmod go+r uni.zip
