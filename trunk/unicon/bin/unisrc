zip -r uni.zip uni/ivib/*.icn uni/ivib/makefile uni/ivib/icon/[xi]*
zip -r uni.zip uni/Makefile uni/makedefs uni/docs
zip -r uni.zip uni/ide/*.icn
zip -r uni.zip uni/lib/*.icn uni/lib/makefile uni/lib/deps.out
zip -r uni.zip uni/gui/*.icn uni/gui/deps.out
zip -r uni.zip uni/gui/ivib/*.icn uni/gui/ivib/deps.out
