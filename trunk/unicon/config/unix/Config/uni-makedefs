UNI=$(BASE)/uni
BIN=$(BASE)/bin
RM=rm -f
CP=cp
UNICON=$(UNI)/unicon/unicon
UNIDEP=$(UNI)/unidep/unidep
ICON_IPL=$(BASE)/ipl
ifeq ("$(OSTYPE)", "cygwin")
	EXE=.exe
else
	EXE=
endif
export IPATH:=$(UNI)/lib $(UNI)/gui $(UNI)/parser $(UNI)/xml $(ICON_IPL)/lib
export LPATH:=$(UNI)/gui $(ICON_IPL)/incl $(ICON_IPL)/gincl
export PATH:=$(BIN):$(PATH)

%: %.icn
	$(UNICON) $<

%.u: %.icn
	$(UNICON) -c $<

%: %.u
	$(UNICON) -o $@ $<

